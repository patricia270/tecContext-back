{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12, 
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": [
            "error",
            { "js": "ignorePackages"}
        ],  
	"indent": [
            "error", 4, { "ignoredNodes": ["ConditionalExpression"] }
        ], 
    "quotes": "off",
    "prefer-const": "off",
    "consistent-return": "off",
    "prefer-default-export": "off"
    },
    "overrides": [
        {
         "files": ["*test.js"],
            "rules": {
               "no-undef": "off"   
            }
        }
    ]
}